<?xml version="1.0" encoding="UTF-8"?>
<components xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0">
    <scr:component enabled="true" name="org.sakaiproject.oae.jaxrs.ThreadLocalOaeWebContext">
        <implementation class="org.sakaiproject.oae.jaxrs.ThreadLocalOaeWebContext"/>
        <service servicefactory="false">
            <provide interface="org.sakaiproject.oae.jaxrs.api.OaeWebContext"/>
